<h3>Events</h3>


<table>
  <tr>
    <th>Name</th>
    <th>Start</th>
    <th>End</th>
    <th>Location</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>

    <td><%= event.name %></td>
    <td><%= event.starts.to_s(:db)   %></td>
    <td><%= event.ends.to_s(:db)   %></td>
    <td><%= Location.find_by_id(event.location_id).name %></td>
    <td><%= event.description %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Cancel', event, confirm: 'Are you sure you want to cancel the event "'+event.name+'"', method: :delete %></td>
  </tr>
<% end %>
</table>

